{
  "name": "smartlock-api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create smartlock",
    "db:init": "wrangler d1 execute smartlock --file=../database/schema.sql",
    "db:migrate": "wrangler d1 migrations apply smartlock",
    "build": "esbuild src/index.ts --bundle --outfile=dist/index.js --format=esm"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "zod": "^3.22.4",
    "bcryptjs": "^2.4.3",
    "jose": "^5.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240129.0",
    "wrangler": "^3.78.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.3.3"
  }
}
