---
import { getCollection } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';

const articles = await getCollection('articles', ({ data }) => {
  return data.category === 'use-cases';
});

// Sort by date (newest first)
const sortedArticles = articles.sort((a, b) => {
  return b.data.pubDate.getTime() - a.data.pubDate.getTime();
});

// Separate pillar articles
const pillarArticles = sortedArticles.filter((a) => a.data.isPillar);
const regularArticles = sortedArticles.filter((a) => !a.data.isPillar);
---

<BaseLayout
  title="Smart Lock Use Cases"
  description="Real-world smart lock deployment strategies for rental properties, offices, hotels, healthcare, education, and more"
>
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <!-- Page Header -->
    <div class="mb-12">
      <h1 class="text-4xl font-bold text-gray-900">
        Use Cases & Deployments
      </h1>
      <p class="mt-4 text-xl text-gray-600">
        Industry-specific deployment strategies and best practices for smart locks
        across rental properties, commercial offices, hospitality, healthcare, education, and government facilities
      </p>
    </div>

    <!-- Pillar Articles -->
    {
      pillarArticles.length > 0 && (
        <div class="mb-16">
          <h2 class="mb-6 text-2xl font-bold text-gray-900">
            Complete Deployment Guides
          </h2>
          <div class="grid gap-6 md:grid-cols-2">
            {pillarArticles.map((article) => (
              <a
                href={`/use-cases/${article.slug.replace('use-cases/', '')}`}
                class="group block rounded-lg border-2 border-primary-200 bg-white p-6 hover:border-primary-400 hover:shadow-lg"
              >
                <div class="mb-2 text-sm font-semibold uppercase text-primary-600">
                  Pillar Article
                </div>
                <h3 class="text-xl font-bold text-gray-900 group-hover:text-primary-600">
                  {article.data.title}
                </h3>
                <p class="mt-2 text-gray-600">{article.data.description}</p>
                <div class="mt-4 flex items-center text-sm text-gray-500">
                  <span>{article.data.readingTime} min read</span>
                  <span class="mx-2">‚Ä¢</span>
                  <span>{article.data.wordCount} words</span>
                </div>
                {article.data.tags && (
                  <div class="mt-4 flex flex-wrap gap-2">
                    {article.data.tags.slice(0, 3).map((tag) => (
                      <span class="rounded-full bg-blue-100 px-2 py-1 text-xs text-blue-800">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
              </a>
            ))}
          </div>
        </div>
      )
    }

    <!-- Regular Articles by Industry -->
    {
      regularArticles.length > 0 && (
        <div>
          <h2 class="mb-6 text-2xl font-bold text-gray-900">
            Industry-Specific Deployments
          </h2>
          <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            {regularArticles.map((article) => (
              <a
                href={`/use-cases/${article.slug.replace('use-cases/', '')}`}
                class="group block rounded-lg border border-gray-200 bg-white p-6 hover:border-primary-300 hover:shadow-lg transition-all"
              >
                <h3 class="text-lg font-bold text-gray-900 group-hover:text-primary-600">
                  {article.data.title}
                </h3>
                <p class="mt-2 text-sm text-gray-600">{article.data.description}</p>
                <div class="mt-4 flex items-center text-xs text-gray-500">
                  <span>{article.data.readingTime} min read</span>
                  <span class="mx-2">‚Ä¢</span>
                  <span>{article.data.wordCount} words</span>
                </div>
                {article.data.tags && (
                  <div class="mt-3 flex flex-wrap gap-1">
                    {article.data.tags.slice(0, 2).map((tag) => (
                      <span class="rounded-full bg-gray-100 px-2 py-1 text-xs text-gray-700">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
              </a>
            ))}
          </div>
        </div>
      )
    }

    {/* No articles message */}
    {
      articles.length === 0 && (
        <div class="rounded-lg border-2 border-dashed border-gray-300 p-12 text-center">
          <p class="text-gray-600">No use case guides available yet.</p>
        </div>
      )
    }

    <!-- Industry Categories -->
    <div class="mt-16 rounded-lg bg-gradient-to-br from-blue-50 to-primary-50 p-8">
      <h2 class="text-2xl font-bold text-gray-900">Browse by Industry</h2>
      <p class="mt-2 text-gray-600">
        Find deployment strategies for your specific industry
      </p>
      <div class="mt-6 grid gap-4 md:grid-cols-2 lg:grid-cols-3">
        <div class="rounded-lg bg-white p-4 shadow-sm">
