---
import { getCollection } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';

const articles = await getCollection('articles', ({ data }) => {
  return data.category === 'support';
});

// Sort by title alphabetically for support articles
const sortedArticles = articles.sort((a, b) => {
  return a.data.title.localeCompare(b.data.title);
});

// Group by common categories
const categories = {
  troubleshooting: sortedArticles.filter(a => 
    a.data.tags?.some(tag => ['troubleshooting', 'connection', 'pairing', 'offline'].includes(tag))
  ),
  setup: sortedArticles.filter(a => 
    a.data.tags?.some(tag => ['setup', 'installation', 'configuration'].includes(tag))
  ),
  maintenance: sortedArticles.filter(a => 
    a.data.tags?.some(tag => ['maintenance', 'battery', 'cleaning', 'optimization'].includes(tag))
  ),
  other: sortedArticles.filter(a => 
    !a.data.tags?.some(tag => 
      ['troubleshooting', 'connection', 'pairing', 'offline', 'setup', 'installation', 
       'configuration', 'maintenance', 'battery', 'cleaning', 'optimization'].includes(tag)
    )
  ),
};
