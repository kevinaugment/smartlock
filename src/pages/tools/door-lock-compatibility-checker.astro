---
import BaseLayout from '@/layouts/BaseLayout.astro';
import DoorLockCompatibilityCheckerCalculator from '@/components/calculators/DoorLockCompatibilityChecker';
---

<BaseLayout
  title="Door Lock Compatibility Checker"
  description="Check if your door thickness, backset, lock hole type, and regional standard are compatible with popular smart locks."
>
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <div class="mb-8">
      <nav class="mb-4 text-sm text-gray-600">
        <a href="/" class="hover:text-gray-900">Home</a>
        <span class="mx-2">/</span>
        <a href="/tools" class="hover:text-gray-900">Tools</a>
        <span class="mx-2">/</span>
        <span class="text-gray-900">Door Lock Compatibility Checker</span>
      </nav>

      <h1 class="text-4xl font-bold text-gray-900">
        Door Lock Compatibility Checker
      </h1>
      <p class="mt-4 text-xl text-gray-600">
        Enter your door measurements and existing hardware type to see which
        smart locks are likely to fit, and where adapters or drilling may be
        required.
      </p>
    </div>

    <DoorLockCompatibilityCheckerCalculator client:load />

    <div class="mt-16 rounded-lg border border-gray-200 bg-gray-50 p-8">
      <h2 class="text-2xl font-bold text-gray-900">What this tool checks</h2>
      <div class="mt-6 space-y-2 text-gray-700">
        <p>• Door material vs. lock design (wood, steel, glass, iron)</p>
        <p>• Existing lock hole type (deadbolt, mortise, no hole)</p>
        <p>• Door thickness and backset vs. typical smart lock requirements</p>
        <p>• Basic regional standard alignment (ANSI, DIN, GB)</p>
      </div>
    </div>
  </div>
</BaseLayout>
